#!/bin/sh

VOLUME_MUTE="ðŸ”‡"
VOLUME_LOW="ðŸ”ˆ"
VOLUME_MID="ðŸ”‰"
VOLUME_HIGH="ðŸ”Š"
SOUND_LEVEL=$(pamixer --get-volume-human | cut -d % -f 1)
MUTED=$(pamixer --get-mute)

ICON=$VOLUME_MUTE
if [ "$MUTED" = "true" ]
then
    ICON="$VOLUME_MUTE"
    echo "$ICON" "$SOUND_LEVEL"
else
    if [ "$SOUND_LEVEL" -lt 34 ]
    then
        ICON="$VOLUME_LOW"
    elif [ "$SOUND_LEVEL" -lt 67 ]
    then
        ICON="$VOLUME_MID"
    else
        ICON="$VOLUME_HIGH"
    fi
    echo "$ICON" "$SOUND_LEVEL"'%'

fi

